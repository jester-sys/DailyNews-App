<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.medi.LoginPage.FeedbackActivity">


    <EditText
        android:id="@+id/TopicFA"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:background="@drawable/round_border"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTextSubtitle"
        android:hint="Topic"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EmailFA"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorHint="#5D5C5C"
        android:paddingStart="10dp"
        android:hint="@string/Email_Address"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_border"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:inputType="textEmailAddress"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/FeedbackMsgFA"
        android:layout_width="401dp"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:textColorHint="@color/colorTextTitle"
        android:textColor="@color/black"
        android:background="@drawable/rounded_corner"
        android:ems="10"

        android:hint="Feedback"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/sendFA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:backgroundTint="@color/RedColor"
        android:text="Send Mesaage " />
</LinearLayout>