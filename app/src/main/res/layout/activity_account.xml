<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="match_parent"
    tools:context="com.medi.LoginPage.AccountActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/AccountImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="108dp"
        android:src="@drawable/unkonw_image"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="@+id/Name"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/Name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="28dp"
        android:text="Account Info"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="@+id/Name"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/Name" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_border"
        android:drawablePadding="5dp"
        android:ems="10"
        android:padding="16dp"
        android:text="No Name ?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:drawableEndCompat="@drawable/_account_icon" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="abcddhsdhj@gmail.com"
        android:background="@drawable/round_border"
        android:textColor="@color/white"
        android:drawableEnd="@drawable/account_imail_icon"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/Name"
        app:layout_constraintStart_toStartOf="@+id/Name"
        app:layout_constraintTop_toBottomOf="@+id/Name" />

    <TextView
        android:id="@+id/ShareApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share This App"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ems="10"
        android:drawableEnd="@drawable/baseline_share_24"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_border"
        app:layout_constraintEnd_toEndOf="@+id/Email"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/feedback" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textColor="@color/white"
        android:background="@drawable/round_border"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ems="10"
        android:drawableEnd="@drawable/baseline_feedback_24"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="@+id/Email"
        app:layout_constraintStart_toStartOf="@+id/Email"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ems="10"
        android:padding="16dp"
        android:drawableEnd="@drawable/baseline_logout_24"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/round_border"
        app:layout_constraintEnd_toEndOf="@+id/ShareApp"
        app:layout_constraintStart_toStartOf="@+id/ShareApp"
        app:layout_constraintTop_toBottomOf="@+id/ShareApp" />
</androidx.constraintlayout.widget.ConstraintLayout>